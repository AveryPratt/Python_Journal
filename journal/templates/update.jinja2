{% extends "layout.jinja2" %}
{% block body %}
    <form method="post">
        <input name="title" type="text" value="{{ entry.title }}" />
        <textarea name="body" rows="10" cols="100" value="{{ entry.body }}"></textarea>
        <input type="submit" value="Update Entry" />
    </form>
{% endblock %}
{% block javascript %}
    <script type="text/javascript" src="{{ request.static_path('journal:static/app.js') }}">
    </script>
{% endblock %}